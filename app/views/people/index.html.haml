%h3 Mass import
= form_tag(people_path, method: 'post', multipart: true) do
  = label_tag 'Select CSV'
  = file_field_tag 'file', :accept => "text/csv"
  = hidden_field_tag :import, 'import'
  = submit_tag 'Import', class: 'button'

= will_paginate @people
%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Parent 1
      %th Parent 2
      %th Partners
      %th Children
    - @people.each do |person|
      %tr
        %td= person.first_name
        %td= person.last_name
        %td= person.relationship_people.where(type: 'RelationshipChild').first.relationship.relationship_people.where(type: 'RelationshipPartner').first.person.name rescue nil
        %td= person.relationship_people.where(type: 'RelationshipChild').first.relationship.relationship_people.where(type: 'RelationshipPartner').second.person.name rescue nil
        %td
          - if person.partners.count > 0
            = person.partners.first.name
        %td
          - if person.children.count > 0
            = person.children.first.name
= will_paginate @people